{% extends 'base.html.twig' %}

{% block title %}Nos bien à vendre{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-md-3">
            {{form(form)}}
        </div>

        <div class="col-md-9">
            <h1>Nos bien à vendres</h1>

                <div class="row">
                    {% for product in products %}
                        <div class="col-md-4">
                            <div class="product-item">
                                <a href="{{path('product', {'slug' : product.slug}) }}"><img src="/uploads/files/{{ product.picture}}" alt="{{ product.name}}" class="img-fluid"></a>
                                <h4>{{ product.name}}</h4>
                                <p>{{ (product.price / 100) |number_format }} €</p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
        </div>  
    </div>

{% endblock %}
