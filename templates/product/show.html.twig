{% extends 'base.html.twig' %}

{% block title %}Nos bien à vendre{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-md-8">
            <img src="/uploads/files/{{ product.picture}}" alt="{{ product.name}}" class="img-fluid">
        </div>
        <div class="col-md-12">
            <h1>{{ product.name}}</h1>
            <p>{{ (product.price / 100) |number_format }} €</p>
            <p>{{ product.description}}</p>
            <a href="{{ path('add_to_cart', {'id': product.id }) }}" class="btn btn-primary">Ajouter au panier</a>
        </div>
    </div>
    <hr>
    <h3>Nos meilleurs ventes</h3>
        <p>Découvrez nos produits les plus vendus</p>
            <div class="row">
                {% for product in products %}
                    <div class="col-md-3">
                    
                        {% include 'product/single_product.html.twig' %}

                    </div>
                {% endfor %}
            </div>

    

{% endblock %}

