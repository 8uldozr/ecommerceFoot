{% extends 'base.html.twig' %}

{% block title %}Valider ma commande - Maillot{% endblock %}

{% block content %}
    <h2> Je passe ma commande </h2>
    <p>Choissisez vos préférences avant de commander sur Footix.fr .</p>

    <div class="row">
        <div class="col-md-6">
                {% set formHtml %}
                    {{ form_start (form, {action:path('order_recap')}) }}
                        {{ form_label (form.addres, "Choississez votre adresse de livraison" )}}
                            <button class="btn btnColor2"><a href="{{ path('account_address_add') }}">+ Ajouter une adresse</a></button>
                    {{ form_end (form)}}
                {% endset %}
                {{ formHtml | replace ({'[br]' : '<br/>'})|raw }}
        </div>
        <div class="col-md-6">
            {% for product in cart %}
                <div class="row">
                    <div class="col-2 hideResponsive"><img src="/uploads/files/{{ product.product.picture }}" alt="{{ product.product.name }}" height="100px"></div>
                    <div class="col-8 my-auto">
                        {{ product.product.name }} <br>
                        <small>{{ product.product.description }}</small>
                    </div> 
                    <div class="col-2 my-auto"> x {{ product.quantity }}</div> 
                    
                </div>
            {% endfor %}
        </div>
    </div>
            

{% endblock %}

