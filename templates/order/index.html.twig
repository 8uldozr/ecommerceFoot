{% extends 'base.html.twig' %}

{% block title %}Valider ma commande - Maillot{% endblock %}

{% block content %}

    <h2> Je passe ma commande </h2>
    <p> Choisissez vos préférences </p>

    <div class="row">

        <div class="col-md-6">

                {% set formHtml %}
                    {{ form_start (form, {action:path('order_recap')}) }}
                        {{ form_label (form.addres, "Choississez votre adresse de livraison" )}}
                            <a href="{{ path('account_address_add') }}">Ajouter une adresse</a>
                    {{ form_end (form)}}
                {% endset %}

                {{ formHtml | replace ({'[br]' : '<br/>'})|raw }}
        </div>

        <div class="col-md-6">


            {% for product in cart %}
                <div class="row">
                    <div class="col-2"><img src="/uploads/files/{{ product.product.picture }}" alt="{{ product.product.name }}" height="100px"></div>
                    <div class="col-8"> x {{ product.quantity }}</div> 
                    <div class="col-2">{{ product.product.name }}</div> 
                </div>
            {% endfor %}
            <b>Bouton pour payer</b>
        </div>

    </div>
            

{% endblock %}
