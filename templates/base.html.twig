<!doctype html>
<html lang="fr">
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="canonical" href="http://footix.site" />  <meta name="robots" content="index,follow" />
    <meta name="Language" CONTENT="fr" />   <meta name="publisher" content="footix.store" />
    <meta name="googlebot" content="index,follow,nosnippet" /> <meta name="google" content="notranslate,nositelinkssearchbox" />
    <meta http-equiv="Cache-control" content="private" />
    <meta property="og:url" content ="https://site.com"/> <meta property="og:title" content ="vente de maillot de foot moins chère"/>
    <meta property="og:type" content ="application web"/>

    <title>
    {% block title %} Footix.fr - 1 weekend, 1 maillot.  {% endblock %}
    </title>
    <meta name="description" content="Footix.site , le site qui vend maillot de foot pas chère de ligue 1, de liga, 
    de serie A, de première league, de selection nationale et vintage">

    <!-- Bootstrap core CSS -->
    <link href="{{ asset('assets/css/bootstrap.min.css') }}" rel="stylesheet"> 
    <link rel="stylesheet" href="{{ asset('assets/css/ecommerce.css') }}">
    {% block javascript %}
    {% endblock %}
    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
        }

        @media (min-width: 768px) {
            .bd-placeholder-img-lg {
                font-size: 3.5rem;
            }
        }
    </style>
    <!-- Custom styles for this template -->
    <link href="{{ asset('assets/css/carousel.css') }}" rel="stylesheet">  
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-light fixed-top  ">
            <a class="navbar-brand" href="{{ path('home') }}"><img src="/assets/img/logo2 - footix.fr.png" alt="" height="100px" ></a>
            
            
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('products') }}">Consulter notre catalogue</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('contact') }}">Contact</a>
                    </li>
                </ul>

                
                        <button class="btn btnColor btnMargin btnNav"><a href="{{ path('cart') }}"><img src="{{ asset ('assets/img/shopping-cart.png') }}" class="icon" alt="mon panier">Mon panier</a></button>
                        <div class="navbarRight">
                    {% if app.user %}
                        <button class="btn btnColor2 btnMargin btnNav"><a href="{{ path('account') }}">Mon compte | {{ app.user.firstname }}  </a></button> 
                        <button class="btn btnColor2 btnMargin btnNav"><a href="{{ path('app_logout') }}">Se déconnecter </a></button>
                        {% else %}
                        <button class="btn btnColor2 btnMargin2 btnNav"><a href="{{ path('app_login') }}">Se connecter </a></button>
                    {% endif %}
                </div>

            </div>
        </nav>
        
    </header>

<main role="main">


       
  
    <div class="container marketing ">



        {% block content %}
        
        {% endblock %}


    </div>
    
    <div class=" container footer">
        <div class="smaller"><a href="{{ path('privacy') }}"> - Politique de confidentialité - </a></div>
        <div class="smaller"><a href="{{ path('legal') }}"> - Mentions Légales - </a></p></div>
        <div class="smaller"><a href="{{ path('vente') }}"> - C.G.V - </a></p></div>
    </div>
</main>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="{{ asset('assets/js/bootstrap.bundle.js') }}"></script> 
</body>
{% block script %}
{% endblock %}
</html>